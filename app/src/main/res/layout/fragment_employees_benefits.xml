            <!--Employee 3-->
            <ImageView
                android:id="@+id/employee3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/employee3"
                app:layout_heightPercent="31%"
                app:layout_marginBottomPercent="0%"
                app:layout_marginLeftPercent="10%"
                app:layout_marginRightPercent="10%"
                app:layout_marginTopPercent="64%"
                app:layout_widthPercent="12%" />

            <TextView
                android:id="@+id/employee3_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Motion Designer"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_heightPercent="10%"
                app:layout_marginBottomPercent="0%"
                app:layout_marginLeftPercent="23%"
                app:layout_marginRightPercent="10%"
                app:layout_marginTopPercent="70%"
                app:layout_widthPercent="20%" />

            <TextView
                android:id="@+id/employee3_name2"
                android:layout_width="wrap_content"
