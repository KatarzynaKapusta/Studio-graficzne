<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".floor_fragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="0dp">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/floor1_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/floor1"/>

            <TextView
                android:id="@+id/floor1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="184dp"
                android:text="Podłoga 1"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/floor1_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-265dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="184dp"
                android:text="Cena:"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/floor1_price_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-170dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="184dp"
                android:text="ITEM PRICE"
                android:textSize="18sp" />
            <Button
                android:id="@+id/floor1PreviewButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="-170dp"
                android:layout_marginEnd="10dp"
                android:background="#FF9800"
                app:backgroundTint="#FF9800"
                android:text="Podgląd"/>
            <Button
                android:id="@+id/floor1BuyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#FF9800"
                app:backgroundTint="#FF9800"
                android:text="Kup"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/floor2_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/floor2"/>

            <TextView
                android:id="@+id/floor2_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="0dp"
                android:text="Podłoga 2"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/floor2_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-80dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="184dp"
                android:text="Cena:"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/floor2_price_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-170dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="184dp"
                android:text="ITEM PRICE"
                android:textSize="18sp" />
            <Button
                android:id="@+id/floor2PreviewButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="-170dp"
                android:layout_marginEnd="10dp"
                android:background="#FF9800"
                app:backgroundTint="#FF9800"
                android:text="Podgląd"/>
            <Button
                android:id="@+id/floor2BuyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#FF9800"
                app:backgroundTint="#FF9800"
                android:text="Kup"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/floor3_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/floor3" />

            <TextView
                android:id="@+id/usrProfStudioNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="0dp"
                android:text="Podłoga 3"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/floor3_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-80dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="184dp"
                android:text="Cena:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/floor3_price_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-170dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="184dp"
                android:text="ITEM PRICE"
                android:textSize="18sp" />
            <Button
                android:id="@+id/floor3PreviewButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="-170dp"
                android:layout_marginEnd="10dp"
                android:background="#FF9800"
                app:backgroundTint="#FF9800"
                android:text="Podgląd"/>
            <Button
                android:id="@+id/floor3BuyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#FF9800"
                app:backgroundTint="#FF9800"
                android:text="Kup"/>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>