<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragment_employees_benefits"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/rouge_pink"
        app:layout_heightPercent="100%"
        app:layout_marginBottomPercent="5%"
        app:layout_marginLeftPercent="10%"
        app:layout_marginRightPercent="10%"
        app:layout_marginTopPercent="30%"
        app:layout_widthPercent="90%">

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_pink"
            app:layout_heightPercent="100%"
            app:layout_marginBottomPercent="1%"
            app:layout_marginLeftPercent="2%"
            app:layout_marginRightPercent="2%"
            app:layout_marginTopPercent="1%"
            app:layout_widthPercent="100%">

            <!-- Employee 1 -->
            <ImageView
                android:id="@+id/employee1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/employee1"
                app:layout_heightPercent="31%"
                app:layout_marginBottomPercent="0%"
                app:layout_marginLeftPercent="14.5%"
                app:layout_marginRightPercent="63%"
                app:layout_marginTopPercent="10%"
                app:layout_widthPercent="15%" />

            <TextView
                android:id="@+id/employee1_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Starszy Grafik"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_heightPercent="10%"
                app:layout_marginBottomPercent="0%"
                app:layout_marginLeftPercent="10%"
                app:layout_marginRightPercent="10%"
                app:layout_marginTopPercent="43%"
                app:layout_widthPercent="25%" />

            <TextView
                android:id="@+id/employee1_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Janek"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_heightPercent="10%"
                app:layout_marginBottomPercent="0%"
                app:layout_marginLeftPercent="12.5%"
                app:layout_marginRightPercent="10%"
                app:layout_marginTopPercent="53%"
                app:layout_widthPercent="20%" />


            <!--Employee 2-->
            <ImageView
                android:id="@+id/employee2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/employee2"
                app:layout_heightPercent="31%"
                app:layout_marginBottomPercent="0%"
                app:layout_marginLeftPercent="41.5%"
                app:layout_marginRightPercent="43%"
                app:layout_marginTopPercent="10%"
                app:layout_widthPercent="15%" />

            <TextView
                android:id="@+id/employee2_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Główny Technik"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_heightPercent="10%"
                app:layout_marginBottomPercent="0%"
                app:layout_marginLeftPercent="37%"
                app:layout_marginRightPercent="10%"
                app:layout_marginTopPercent="43%"
                app:layout_widthPercent="25%" />

            <TextView
                android:id="@+id/employee2_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Karolina"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_heightPercent="10%"
                app:layout_marginBottomPercent="0%"
                app:layout_marginLeftPercent="39%"
                app:layout_marginRightPercent="10%"
                app:layout_marginTopPercent="53%"
                app:layout_widthPercent="20%" />


            <!--Employee 3-->
            <ImageView
                android:id="@+id/employee3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/employee3"
                app:layout_heightPercent="31%"
                app:layout_marginBottomPercent="0%"
                app:layout_marginLeftPercent="70%"
                app:layout_marginRightPercent="10%"
                app:layout_marginTopPercent="10%"
                app:layout_widthPercent="15%" />

            <TextView
                android:id="@+id/employee3_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Motion Designer"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_heightPercent="10%"
                app:layout_marginBottomPercent="0%"
                app:layout_marginLeftPercent="65%"
                app:layout_marginRightPercent="10%"
                app:layout_marginTopPercent="43%"
                app:layout_widthPercent="25%" />

            <TextView
                android:id="@+id/employee3_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mateusz"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_heightPercent="10%"
                app:layout_marginBottomPercent="0%"
                app:layout_marginLeftPercent="67.5%"
                app:layout_marginRightPercent="10%"
                app:layout_marginTopPercent="53%"
                app:layout_widthPercent="20%" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/benefits_and_salary_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/pink_snow"
                android:text="Korzyści i Pensja"
                android:textAlignment="center"
                app:layout_heightPercent="20%"
                app:layout_marginBottomPercent="0%"
                app:layout_marginLeftPercent="34%"
                app:layout_marginRightPercent="10%"
                app:layout_marginTopPercent="70%"
                app:layout_widthPercent="30%">

            </androidx.appcompat.widget.AppCompatButton>


        </androidx.percentlayout.widget.PercentRelativeLayout>
    </androidx.percentlayout.widget.PercentRelativeLayout>


</androidx.percentlayout.widget.PercentRelativeLayout>