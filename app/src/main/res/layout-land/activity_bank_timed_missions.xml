<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_bank_timed_missions"
    android:background="@drawable/bank_background">

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mission_bank_background"
        app:layout_heightPercent="15%"
        app:layout_marginBottomPercent="50%"
        app:layout_marginLeftPercent="40%"
        app:layout_marginRightPercent="40%"
        app:layout_marginTopPercent="5%"
        app:layout_widthPercent="20%">

        <TextView
            android:id="@+id/bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bank"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="40sp"
            app:layout_marginBottomPercent="5%"
            app:layout_marginLeftPercent="20%"
            app:layout_marginRightPercent="5%"
            app:layout_marginTopPercent="8%" />
    </androidx.percentlayout.widget.PercentRelativeLayout>

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_heightPercent="20%"
        app:layout_marginBottomPercent="88%"
        app:layout_marginTopPercent="2%">

        <TextView
            android:id="@+id/expBarTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoSizeMaxTextSize="14dp"
            android:autoSizeMinTextSize="10dp"
            android:background="@drawable/stats_icon_background"
            android:gravity="center"
            android:paddingStart="15dp"
            android:paddingEnd="7dp"
            android:paddingBottom="2.5dp"
            android:text="exp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_heightPercent="65%"
            app:layout_marginLeftPercent="3.5%"
            app:layout_marginRightPercent="25%"
            app:layout_marginTopPercent="29%"
            app:layout_widthPercent="10%" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lvl_star"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="6%" />

        <TextView
            android:id="@+id/lvlStarTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autoSizeTextType="uniform"
            android:text="lvl"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_heightPercent="50%"
            app:layout_marginLeftPercent="1.4%"
            app:layout_marginTopPercent="30%"
            app:layout_widthPercent="3%" />


        <!--        dwa-->
        <TextView
            android:id="@+id/moneyBarTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoSizeMaxTextSize="14dp"
            android:autoSizeMinTextSize="10dp"
            android:background="@drawable/stats_icon_background"
            android:gravity="center"
            android:paddingStart="15dp"
            android:paddingEnd="7dp"
            android:paddingBottom="2.5dp"
            android:text="mani"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_heightPercent="65%"
            app:layout_marginBottomPercent="0%"
            app:layout_marginLeftPercent="17.4%"
            app:layout_marginRightPercent="25%"
            app:layout_marginTopPercent="29%"
            app:layout_widthPercent="10%" />

        <ImageView
            android:id="@+id/cashBagTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cash_bag"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_heightPercent="95%"
            app:layout_marginLeftPercent="15%"
            app:layout_widthPercent="4.5%" />

        <!--        trzy-->
        <TextView
            android:id="@+id/resBarTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoSizeMaxTextSize="14dp"
            android:autoSizeMinTextSize="10dp"
            android:background="@drawable/stats_icon_background"
            android:gravity="center"
            android:paddingStart="15dp"
            android:paddingEnd="7dp"
            android:paddingBottom="2.5dp"
            android:text="tulsy"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_heightPercent="65%"
            app:layout_marginBottomPercent="0%"
            app:layout_marginLeftPercent="32.6%"
            app:layout_marginRightPercent="25%"
            app:layout_marginTopPercent="29%"
            app:layout_widthPercent="10%" />

        <ImageView
            android:id="@+id/resBagTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tools"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_heightPercent="88%"
            app:layout_marginLeftPercent="30%"
            app:layout_marginTopPercent="5%"
            app:layout_widthPercent="4.5%" />
    </androidx.percentlayout.widget.PercentRelativeLayout>

    <!-- Misja 1 -->
    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/mission1_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mission_bank_background"
        android:visibility="visible"
        app:layout_marginBottomPercent="5%"
        app:layout_marginLeftPercent="3%"
        app:layout_marginRightPercent="67%"
        app:layout_marginTopPercent="25%">

        <!--Tytuł-->
        <TextView
            android:text="@string/misja_1"
            android:textSize="35sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="20%"
            app:layout_marginLeftPercent="25%"
            app:layout_marginRightPercent="25%"
            app:layout_marginBottomPercent="70%"
            app:layout_marginTopPercent="10%">

        </TextView>

        <!--Tekst misji-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Przyszedłeś do banku w celu założenia kolejnej lokaty oszczędnościowej dla swojego studia."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_heightPercent="50%"
            app:layout_marginBottomPercent="30%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="5%"
            app:layout_marginTopPercent="30%"
            app:layout_widthPercent="90%">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CZAS: 1 min"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_heightPercent="50%"
            app:layout_marginBottomPercent="30%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="5%"
            app:layout_marginTopPercent="60%"
            app:layout_widthPercent="90%">

        </TextView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/alice_blue"
            android:text="Wybierz"
            app:layout_heightPercent="15%"
            app:layout_marginBottomPercent="5%"
            app:layout_marginLeftPercent="25%"
            app:layout_marginRightPercent="25%"
            app:layout_marginTopPercent="75%"
            app:layout_widthPercent="50%">

        </androidx.appcompat.widget.AppCompatButton>

    </androidx.percentlayout.widget.PercentRelativeLayout>

    <!-- Misja 2 -->
    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/mission2_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mission_bank_background"
        android:visibility="visible"
        app:layout_marginBottomPercent="5%"
        app:layout_marginLeftPercent="35%"
        app:layout_marginRightPercent="35%"
        app:layout_marginTopPercent="25%">

        <!--Tytuł-->
        <TextView
            android:text="@string/misja_2"
            android:textSize="35sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_widthPercent="70%"
            app:layout_heightPercent="20%"
            app:layout_marginLeftPercent="20%"
            app:layout_marginRightPercent="20%"
            app:layout_marginBottomPercent="70%"
            app:layout_marginTopPercent="10%">

        </TextView>

        <!--Tekst misji-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textAlignment="center"
            android:text="Zlecenie modeli 3D do najnowszej części Złych Pomidorów zostało zakończone. Zdeponuj czek."
            app:layout_widthPercent="90%"
            app:layout_heightPercent="50%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="5%"
            app:layout_marginBottomPercent="30%"
            app:layout_marginTopPercent="30%">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CZAS: 2 min"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_heightPercent="50%"
            app:layout_marginBottomPercent="30%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="5%"
            app:layout_marginTopPercent="60%"
            app:layout_widthPercent="90%">

        </TextView>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/alice_blue"
            android:text="Wybierz"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="15%"
            app:layout_marginBottomPercent="5%"
            app:layout_marginLeftPercent="25%"
            app:layout_marginRightPercent="25%"
            app:layout_marginTopPercent="75%">

        </androidx.appcompat.widget.AppCompatButton>

    </androidx.percentlayout.widget.PercentRelativeLayout>
    <!-- Misja 3 -->
    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/mission3_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mission_bank_background"
        android:visibility="visible"
        app:layout_marginBottomPercent="5%"
        app:layout_marginLeftPercent="67%"
        app:layout_marginRightPercent="3%"
        app:layout_marginTopPercent="25%">

        <!--Tytuł-->
        <TextView
            android:text="@string/misja_3"
            android:textSize="35sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_widthPercent="60%"
            app:layout_heightPercent="20%"
            app:layout_marginLeftPercent="20%"
            app:layout_marginRightPercent="20%"
            app:layout_marginBottomPercent="70%"
            app:layout_marginTopPercent="10%">

        </TextView>

        <!--Tekst misji-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textAlignment="center"
            android:text="Na potrzeby nowego projektu musisz wypłacić z banku pieniądze. Wypełnij odpowiednie dokumenty."
            app:layout_widthPercent="90%"
            app:layout_heightPercent="50%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="5%"
            app:layout_marginBottomPercent="30%"
            app:layout_marginTopPercent="30%">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CZAS: 3 min"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_heightPercent="50%"
            app:layout_marginBottomPercent="30%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="5%"
            app:layout_marginTopPercent="60%"
            app:layout_widthPercent="90%">

        </TextView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/alice_blue"
            android:text="Wybierz"
            app:layout_heightPercent="15%"
            app:layout_marginBottomPercent="5%"
            app:layout_marginLeftPercent="25%"
            app:layout_marginRightPercent="25%"
            app:layout_marginTopPercent="75%"
            app:layout_widthPercent="50%">

        </androidx.appcompat.widget.AppCompatButton>

    </androidx.percentlayout.widget.PercentRelativeLayout>

    <!-- Timer -->
    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/timed_mission_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mission_bank_background"
        android:visibility="invisible"
        app:layout_marginBottomPercent="5%"
        app:layout_marginLeftPercent="20%"
        app:layout_marginRightPercent="20%"
        app:layout_marginTopPercent="5%">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/praca"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="35dp"
            app:layout_heightPercent="15%"
            app:layout_marginBottomPercent="10%"
            app:layout_marginLeftPercent="35%"
            app:layout_marginRightPercent="35%"
            app:layout_marginTopPercent="10%"
            app:layout_widthPercent="30%"
            tools:ignore="InvalidId">

        </TextView>

        <!-- Timer -->
        <TextView
            android:id="@+id/text_view_countdown_timed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timer_start"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:visibility="visible"
            app:layout_heightPercent="15%"
            app:layout_marginBottomPercent="10%"
            app:layout_marginLeftPercent="35%"
            app:layout_marginRightPercent="20%"
            app:layout_marginTopPercent="50%"
            app:layout_widthPercent="30%"
            tools:ignore="InvalidId">

        </TextView>

        <!--Treść okienka -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timed_text_mission"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_heightPercent="15%"
            app:layout_marginBottomPercent="10%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="5%"
            app:layout_marginTopPercent="28%"
            app:layout_widthPercent="100%"
            tools:ignore="InvalidId">

        </TextView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/start_timed_mission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/alice_blue"
            android:text="@string/rozpocznij_misje"
            app:layout_heightPercent="15%"
            app:layout_marginBottomPercent="10%"
            app:layout_marginLeftPercent="25%"
            app:layout_marginRightPercent="25%"
            app:layout_marginTopPercent="50%"
            app:layout_widthPercent="50%">

        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/back_to_missions_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/alice_blue"
            android:text="@string/powrot"
            app:layout_heightPercent="15%"
            app:layout_marginBottomPercent="5%"
            app:layout_marginLeftPercent="25%"
            app:layout_marginRightPercent="25%"
            app:layout_marginTopPercent="70%"
            app:layout_widthPercent="50%">

        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/collect_timed_rewards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/alice_blue"
            android:text="@string/odbierz_nagrody"
            android:visibility="invisible"
            app:layout_heightPercent="15%"
            app:layout_marginBottomPercent="5%"
            app:layout_marginLeftPercent="25%"
            app:layout_marginRightPercent="25%"
            app:layout_marginTopPercent="70%"
            app:layout_widthPercent="50%">

        </androidx.appcompat.widget.AppCompatButton>

        <!--ILOSC ZDOBYDYCH NAGROD-->
        <TextView
            android:id="@+id/rewards_acquired_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zdobyte nagrody:"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="invisible"
            app:layout_heightPercent="15%"
            app:layout_marginBottomPercent="10%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="5%"
            app:layout_marginTopPercent="43%"
            app:layout_widthPercent="100%"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/rewards_mon_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pieniądze:"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:visibility="invisible"
            app:layout_heightPercent="15%"
            app:layout_marginBottomPercent="10%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="49%"
            app:layout_marginTopPercent="52%"
            app:layout_widthPercent="100%"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/rewards_exp_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doświadczenie:"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:visibility="invisible"
            app:layout_heightPercent="15%"
            app:layout_marginBottomPercent="10%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="40%"
            app:layout_marginTopPercent="60%"
            app:layout_widthPercent="100%"
            tools:visibility="visible" />


        <TextView
            android:id="@+id/rewards_mon_btv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:visibility="invisible"
            app:layout_heightPercent="15%"
            app:layout_marginBottomPercent="10%"
            app:layout_marginLeftPercent="50%"
            app:layout_marginRightPercent="10%"
            app:layout_marginTopPercent="52%"
            app:layout_widthPercent="100%"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/rewards_exp_btv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:visibility="invisible"
            app:layout_heightPercent="15%"
            app:layout_marginBottomPercent="10%"
            app:layout_marginLeftPercent="50%"
            app:layout_marginRightPercent="10%"
            app:layout_marginTopPercent="60%"
            app:layout_widthPercent="100%"
            tools:visibility="visible" />

    </androidx.percentlayout.widget.PercentRelativeLayout>

</androidx.percentlayout.widget.PercentRelativeLayout>