<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_bank_timed_missions"
    android:background="@drawable/bank_background">

    <!-- Misja 1 -->
    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/mission1_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mission_bank_background"
        android:visibility="visible"
        app:layout_marginBottomPercent="5%"
        app:layout_marginLeftPercent="3%"
        app:layout_marginRightPercent="67%"
        app:layout_marginTopPercent="25%">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/alice_blue"
            android:text="Wybierz"
            app:layout_heightPercent="15%"
            app:layout_marginBottomPercent="5%"
            app:layout_marginLeftPercent="25%"
            app:layout_marginRightPercent="25%"
            app:layout_marginTopPercent="75%"
            app:layout_widthPercent="50%">

        </androidx.appcompat.widget.AppCompatButton>

    </androidx.percentlayout.widget.PercentRelativeLayout>

    <!-- Misja 2 -->
    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/mission2_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mission_bank_background"
        android:visibility="visible"
        app:layout_marginBottomPercent="5%"
        app:layout_marginLeftPercent="35%"
        app:layout_marginRightPercent="35%"
        app:layout_marginTopPercent="25%">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/alice_blue"
            android:text="Wybierz"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="15%"
            app:layout_marginBottomPercent="5%"
            app:layout_marginLeftPercent="25%"
            app:layout_marginRightPercent="25%"
            app:layout_marginTopPercent="75%">

        </androidx.appcompat.widget.AppCompatButton>

    </androidx.percentlayout.widget.PercentRelativeLayout>
    <!-- Misja 3 -->
    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/mission3_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mission_bank_background"
        android:visibility="visible"
        app:layout_marginBottomPercent="5%"
        app:layout_marginLeftPercent="67%"
        app:layout_marginRightPercent="3%"
        app:layout_marginTopPercent="25%">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/alice_blue"
            android:text="Wybierz"
            app:layout_heightPercent="15%"
            app:layout_marginBottomPercent="5%"
            app:layout_marginLeftPercent="25%"
            app:layout_marginRightPercent="25%"
            app:layout_marginTopPercent="75%"
            app:layout_widthPercent="50%">

        </androidx.appcompat.widget.AppCompatButton>

    </androidx.percentlayout.widget.PercentRelativeLayout>

    <!-- Timer -->
    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/timed_mission_layout"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/mission_bank_background"
        app:layout_marginBottomPercent="5%"
        app:layout_marginLeftPercent="25%"
        app:layout_marginRightPercent="25%"
        app:layout_marginTopPercent="25%"
        android:visibility="invisible"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/praca"
            android:textColor="@color/black"
            android:textSize="35dp"
            android:textAlignment="center"
            app:layout_heightPercent="15%"
            app:layout_widthPercent="30%"
            app:layout_marginBottomPercent="10%"
            app:layout_marginLeftPercent="35%"
            app:layout_marginRightPercent="35%"
            app:layout_marginTopPercent="10%"
            tools:ignore="InvalidId">

        </TextView>

        <!-- Timer -->
        <TextView
            android:id="@+id/text_view_countdown_timed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timer_start"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_heightPercent="15%"
            app:layout_marginBottomPercent="10%"
            app:layout_marginLeftPercent="40%"
            app:layout_marginRightPercent="25%"
            app:layout_marginTopPercent="50%"
            app:layout_widthPercent="21%"
            tools:ignore="InvalidId">

        </TextView>

        <!--Treść okienka -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Musisz jeszcze chwilę poczekać.\nTwoja misja za niedługo się skończy.\n"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textAlignment="center"
            app:layout_heightPercent="15%"
            app:layout_widthPercent="100%"
            app:layout_marginBottomPercent="10%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="5%"
            app:layout_marginTopPercent="35%"
            tools:ignore="InvalidId">

        </TextView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/start_timed_mission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/alice_blue"
            android:text="@string/rozpocznij_misje"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="15%"
            app:layout_marginBottomPercent="10%"
            app:layout_marginLeftPercent="25%"
            app:layout_marginRightPercent="25%"
            app:layout_marginTopPercent="50%">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/back_to_missions_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/alice_blue"
            android:text="@string/powrot"
            app:layout_heightPercent="15%"
            app:layout_marginBottomPercent="5%"
            app:layout_marginLeftPercent="25%"
            app:layout_marginRightPercent="25%"
            app:layout_marginTopPercent="70%"
            app:layout_widthPercent="50%">

        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/collect_timed_rewards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/alice_blue"
            android:text="@string/odbierz_nagrody"
            android:visibility="invisible"
            app:layout_heightPercent="15%"
            app:layout_marginBottomPercent="5%"
            app:layout_marginLeftPercent="25%"
            app:layout_marginRightPercent="25%"
            app:layout_marginTopPercent="70%"
            app:layout_widthPercent="50%">

        </androidx.appcompat.widget.AppCompatButton>
    </androidx.percentlayout.widget.PercentRelativeLayout>

</androidx.percentlayout.widget.PercentRelativeLayout>