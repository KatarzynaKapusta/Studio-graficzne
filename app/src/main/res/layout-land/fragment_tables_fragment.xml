<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".tables_fragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/shopMainLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="0dp">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/table1ImageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/table1"
                android:contentDescription="@string/table1Description" />

            <TextView
                android:id="@+id/table1NameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="184dp"
                android:text="@string/table1"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/table1PriceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-250dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="184dp"
                android:text="@string/pricePL"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/table1PriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-170dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="184dp"
                android:text="@string/item_price"
                android:textSize="18sp" />

            <Button
                android:id="@+id/table1PreviewButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="-170dp"
                android:layout_marginEnd="10dp"
                android:background="#2196F3"
                app:backgroundTint="#2196F3"
                android:text="@string/previewPL"/>

            <Button
                android:id="@+id/table1BuyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#2196F3"
                app:backgroundTint="#2196F3"
                android:text="@string/buyPL"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/table2ImageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/table2"
                android:contentDescription="@string/table2Description" />

            <TextView
                android:id="@+id/table2NameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="0dp"
                android:text="@string/table2"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/table2PriceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-65dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="184dp"
                android:text="@string/pricePL"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/table2PriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-170dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="184dp"
                android:text="@string/item_price"
                android:textSize="18sp" />

            <Button
                android:id="@+id/table2PreviewButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="-170dp"
                android:layout_marginEnd="10dp"
                android:background="#2196F3"
                app:backgroundTint="#2196F3"
                android:text="@string/previewPL"/>

            <Button
                android:id="@+id/table2BuyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#2196F3"
                app:backgroundTint="#2196F3"
                android:text="@string/buyPL"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/table3ImageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/table3"
                android:contentDescription="@string/table3Description" />

            <TextView
                android:id="@+id/table3NameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="0dp"
                android:text="@string/table3"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/table3PriceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-65dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="184dp"
                android:text="@string/pricePL"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/table3PriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-170dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="184dp"
                android:text="@string/item_price"
                android:textSize="18sp" />

            <Button
                android:id="@+id/table3PreviewButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="-170dp"
                android:layout_marginEnd="10dp"
                android:background="#2196F3"
                app:backgroundTint="#2196F3"
                android:text="@string/previewPL"/>

            <Button
                android:id="@+id/table3BuyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#2196F3"
                app:backgroundTint="#2196F3"
                android:text="@string/buyPL"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>