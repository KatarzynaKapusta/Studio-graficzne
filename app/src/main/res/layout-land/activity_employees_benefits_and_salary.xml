        <TextView
            android:id="@+id/studio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Studio"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="40sp"
            app:layout_marginBottomPercent="5%"
            app:layout_marginLeftPercent="14%"
            app:layout_marginRightPercent="5%"
            app:layout_marginTopPercent="8%" />
    </androidx.percentlayout.widget.PercentRelativeLayout>

    <!-- Pracownik 1 -->
    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/mission1_layout_storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/choice_studio_background"
        android:visibility="visible"
        app:layout_marginBottomPercent="5%"
        app:layout_marginLeftPercent="3%"
        app:layout_marginRightPercent="67%"
        app:layout_marginTopPercent="25%">

        <!-- Employee 1-->
        <!--Tytuł-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/employee1"
            app:layout_heightPercent="40%"
            app:layout_marginBottomPercent="60%"
            app:layout_marginLeftPercent="25%"
            app:layout_marginRightPercent="25%"
            app:layout_marginTopPercent="5%"
            app:layout_widthPercent="50%">

        </ImageView>

        <TextView
            android:id="@+id/employee1_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Starszy Grafik"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_heightPercent="10%"
            app:layout_marginBottomPercent="0%"
            app:layout_marginLeftPercent="20%"
            app:layout_marginRightPercent="20%"
            app:layout_marginTopPercent="43%"
            app:layout_widthPercent="70%" />

        <!-- Timer -->
        <TextView
            android:id="@+id/text_view_countdown_studio_salary1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timer_start"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:visibility="visible"
            app:layout_heightPercent="15%"
            app:layout_marginBottomPercent="10%"
            app:layout_marginLeftPercent="35%"
            app:layout_marginRightPercent="20%"
            app:layout_marginTopPercent="55%"
            app:layout_widthPercent="30%"
            tools:ignore="InvalidId">

        </TextView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/start_salary_timer_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/pink_snow"
            android:text="Zapłać"
            app:layout_heightPercent="15%"
            app:layout_marginBottomPercent="5%"
            app:layout_marginLeftPercent="25%"
            app:layout_marginRightPercent="25%"
            app:layout_marginTopPercent="55%"
            app:layout_widthPercent="50%"
            android:enabled="false">

        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/collect_earnings_pay_salary_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/pink_snow"
            android:text="Odbierz"
            app:layout_heightPercent="15%"
            app:layout_marginBottomPercent="5%"
            app:layout_marginLeftPercent="25%"
            app:layout_marginRightPercent="25%"
            app:layout_marginTopPercent="75%"
            app:layout_widthPercent="50%"
            android:enabled="false">

        </androidx.appcompat.widget.AppCompatButton>

    </androidx.percentlayout.widget.PercentRelativeLayout>

